<%= form_for @recipe do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %> <br /><br />
  <%= f.fields_for :ingredients do |ingri| %>
    <%= ingri.label :name %>
    <%= ingri.text_field :name %><br>
 
    <%= ingri.label :quantity %>
    <%= ingri.number_field :quantity %><br>
 
  <% end %>
 
 <%= f.submit %>
<% end %>
